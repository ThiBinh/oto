@model WebBanOto.Models.TUVAN

@{
    ViewBag.Title = "Xoayc";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>XÁC NHẬN THÔNG TIN SÁCH CẦN XÓA</h2>

<h3>
    Bạn quyết định xóa yêu cầu này?
</h3>
<div>
   
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Họ tên
        </dt>

        <dd>
            @Html.DisplayFor(model => model.HoTen)
        </dd>

        <dt>
            Điện thoại
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Dienthoai)
        </dd>

        <dt>
            Email
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>

        <dt>
            Phương thức
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PHUONGTHUC.TenPT)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

    <div class="form-actions no-color">
        <input type="submit" value="XÓA" class="btn btn-default" /> |
        @Html.ActionLink("QUAY LẠI", "Yeucau")
    </div>
    }
</div>
