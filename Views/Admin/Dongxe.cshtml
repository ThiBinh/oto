@using WebBanOto.Models
@using PagedList.Mvc;
@model PagedList.PagedList<DONGXE>

@{
    ViewBag.Title = "Dongxe";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>QUẢN LÍ THÔNG TIN DÒNG XE</h2>

<p>
    @Html.ActionLink("THÊM MỚI", "Themdongxe")
</p>
<table class="table" border="1">
    <tr>
        <th style="width:200px">  Tên dòng xe </th>


        <th style="width:200px">  </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TenDX)
            </td>
            <td>
                @Html.ActionLink("Sửa", "SuaDx", new { id = item.MaDX }) |

                @Html.ActionLink("Xóa", "Xoadx", new { id = item.MaDX })
            </td>
        </tr>
    }

</table>
<div class="f">
    @* Tao liên kết các trang  *@
    Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)/@Model.PageCount;

</div>
<div class="MenuTrang">

    @Html.PagedListPager(Model, page => Url.Action("Dongxe", new { page = page }))
</div>


<style type="text/css">

    .f {
        position: relative;
        clear: both;
    }

    .MenuTrang li {
        display: inline;
       
    }
</style>