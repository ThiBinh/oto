
@{
    ViewBag.Title = "Feedback";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}
<h3 style="Text-align:Center; color:red">FEEDBACK</h3>
<h4>Please ensure that your information is accurate.</h4>
<table align="center">
    
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)
        <tr style="height:40px">
            <td> Full name* </td>
            <td>
                @Html.TextBox("Hoten")
                @ViewData["Loi1"]
            </td>
        </tr>

        <tr style="height:40px">
            <td> Phone number* </td>
            <td>
                @Html.TextBox("Dienthoai")

            </td>
        </tr>


        <tr style="height:40px">
            <td> Email* </td>
            <td>
                <input type="email" name="Email" />
                @ViewData["Loi2"]
            </td>
        </tr>
        <tr style="height:40px">
            <td> Title </td>
            <td>
                @Html.TextBox("Tieude")

            </td>
        </tr>
        <tr style="height:40px">
            <td> Content* </td>
            <td>
                @Html.TextArea("Noidung")
                @ViewData["Loi3"]
            </td>
        </tr>

        <tr style="height:40px">
            <td></td>
            <td>
                <button type="submit" value="Save" class="btn btn-primary">Send</button>
            </td>
        </tr>
    }
</table>

